{
  "manifest_version": 2,
  "name": "Shop Seashell",
  "description": "Determines if site user is currently on is paired with Seashell",
  "version": "1.0",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Shop Seashell"
  },
  "permissions": [
    "activeTab",
    "background"
  ]
}